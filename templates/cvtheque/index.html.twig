{% extends 'base.html.twig' %}

{% block title %}CvTHèque Job-Ads{% endblock %}
{% block body %}
    {{ include('fragments/_navEntreprise.html.twig') }}
    <div class="container mt-3 mb-3 font-weight-bold">
        <h4 class="mt-3">Accéder à la CvThèque - Tous les CVs</h4>
    </div>

    <div class="container shadow" style="border-radius: 4px;background-color: #fff">
        {{ form_start(form) }}
        <div class="row ">
            <div class="col-6">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-6">
                {{ form_row(form.domaineEtude) }}
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                {{ form_row(form.niveauFormation) }}
            </div>
            <div class="col-6">
                {{ form_row(form.localite) }}
            </div>
        </div>


        {{ form_end(form) }}
    </div>
    <div class="container mt-2 pl-0 pr-0">
        <hr class="mb-0 ">
        {% for candidat in candidats %}
            <div class="form-cvtheque mb-0 pl-2 pr-2">
                <a href="" style="color: inherit">
                    <div class="row">
                        <div class="col-1 pt-2">
                            <img src="{{ vich_uploader_asset(candidat) }}" alt="profil">
                        </div>
                        <div class="col-3 pt-2">
                            <span>
                                {{ candidat.nom }} | {{ candidat.prenom }}
                            </span>
                            <div class="">
                                <p>Logiticien</p>
                            </div>
                        </div>
                        <div class="col-4 pt-2">
                            <p class="text-center">Dakar</p>
                        </div>
                        <div class="col-4 pt-2">
                            <p class="text-right">Les domaines d'études</p>
                        </div>
                    </div>
                </a>
            </div>

            <hr class="mb-0 mt-0">
        {% endfor %}
        <div class="navigation mb-5 mt-3 d-flex justify-content-center">
            {{ knp_pagination_render(candidats) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    <script>
        $(function () {
            $(".auto_submit_form").change(function () {
                this.submit();
            });
        });
    </script>
    <script>
        window.onload = function () {
            scrollFunction()
        };

        function scrollFunction() {
            document.getElementById("nav").classList.add('bg-light');
            document.getElementById("nav").classList.add('scroll');
        }
    </script>
{% endblock %}

