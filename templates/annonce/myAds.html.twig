{% extends 'base.html.twig' %}

{% block title 'Mes Annonce - Job-Ads' %}
{% block stylesheets %}

    {{ parent() }}
    <style>
        .list-div {

        }

        .list-ul {
            list-style-type: none;
            padding: 0;
        }

        .list-li h3 {
            font: bold 20px/1.5 Helvetica, Verdana, sans-serif;
        }


        .list-img img {
            width: 200px;
            height: 140px;
        }

        .list-li p {
            font: 200 12px/1.5 'Lora', Georgia, Times New Roman, serif;
            width: 100%;
        }

        .list-li {
            padding: 10px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
            transition: box-shadow 0.3s ease-in-out;
        }

        .list-li:hover {
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);

        }

        .list-a {
            display: flex;
            text-decoration: none;
            color: #000;
        }
    </style>
{% endblock %}
{% block body %}
    {{ include('fragments/_navEntreprise.html.twig') }}

    <div class="container">
        <h2 class="text-dark text-center mt-5">Parcourez vos annonces et faites vos recrutements</h2>
    </div>

    <div class="container list-div mt-5">
        <div class="col-md-10 mx-auto">
            {% for annonce in annonces %}
                <div class=" list-li col mr-1 mb-3 rounded-0 alert  alert-light text-dark">
                    <strong>{{ annonce.titreAnnonce }}</strong>, expire le .<span class="text-danger"> {{ annonce.dateLimite| date("m/d/Y") }}</span> <br>
                    Description :<br> <strong class="ml-5">{{ annonce.description|u.truncate(500,'...',false) }}</strong>
                    <br><a href="" class="text-info text-right">Voir le contenu</a>
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="list-div mt-5 row-cols-2">
        <ul class="list-ul">
        </ul>
    </div>
{% endblock %}


