{% extends 'base.html.twig' %}

{% block title %}Hello ContactEntretienController!{% endblock %}

{% block body %}
    <div class="container mt-4 mb-5">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1 class="text-center mt-5 mb-5">Contactez les Candidats</h1>
                    {{ form_start(form) }}
                    <div class="form-group mr-4 ml-4">
                        {{ form_row(form.dateEntretien) }}
                    </div>
                    <div class="form-group mr-4 ml-4">
                        {{ form_row(form.heureEntretien) }}
                    </div>
                    <div class="form-group mr-4 ml-4 mb-4">
                        <button type="submit" class="btn btn-success">Contacter</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
